@model IEnumerable<prjToDo.Models.tToDo>

@{
    ViewBag.Title = "待辦事項";
}

<h2>待辦事項</h2>

<p>
    @Html.ActionLink("新增待辦事項", "Create")
</p>
<p>
    @Html.ActionLink("歷史待辦事項", "Log")
</p>
<table class="table">
    <tr>
        <th>
            標題
        </th>
        <th>
            重要層級
        </th>
        <th>
            預計結案日期
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>          
            <td>
                @Html.DisplayFor(modelItem => item.fTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fLevel)
            </td>
            <td>
                @DateTime.Parse(item.fDate.ToString()).ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("已完成", "Delete", new { id = item.fId }, new { onclick = "return confirm('確定完成嗎?')", @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>


